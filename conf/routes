# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /api/users1                 crud.controllers.Users.all
POST    /api/users1                 crud.controllers.Users.create
GET     /api/users1/:id             crud.controllers.Users.show(id: String)
PUT     /api/users1/:id             crud.controllers.Users.update(id: String)
DELETE  /api/users1/:id             crud.controllers.Users.delete(id: String)

GET     /api/users2                 crudJsonCoastToCoast.controllers.Users.all
POST    /api/users2                 crudJsonCoastToCoast.controllers.Users.create
GET     /api/users2/:id             crudJsonCoastToCoast.controllers.Users.show(id: String)
PUT     /api/users2/:id             crudJsonCoastToCoast.controllers.Users.update(id: String)
DELETE  /api/users2/:id             crudJsonCoastToCoast.controllers.Users.delete(id: String)

GET     /api/chat/:room/feed        chatsse.controllers.ChatApplication.chatFeed(room: String)
POST    /api/chat/:room/post        chatsse.controllers.ChatApplication.postMessageAsync(room: String)
GET     /api/chat/:room             chatsse.controllers.ChatApplication.getMessagesAsync(room: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public/dist", file)

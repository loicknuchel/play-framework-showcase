# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

GET     /api/users1                 crud1.controllers.Users.all
POST    /api/users1                 crud1.controllers.Users.create
GET     /api/users1/:id             crud1.controllers.Users.show(id: String)
PUT     /api/users1/:id             crud1.controllers.Users.update(id: String)
DELETE  /api/users1/:id             crud1.controllers.Users.delete(id: String)

GET     /api/users2                 crud2.controllers.Users.all
POST    /api/users2                 crud2.controllers.Users.create
GET     /api/users2/:id             crud2.controllers.Users.show(id: String)
PUT     /api/users2/:id             crud2.controllers.Users.update(id: String)
DELETE  /api/users2/:id             crud2.controllers.Users.delete(id: String)

GET     /chat/:room/feed            chatsse.controllers.ChatApplication.chatFeed(room: String)
POST    /chat/:room/post            chatsse.controllers.ChatApplication.postMessageAsync(room: String)
GET     /chat/:room                 chatsse.controllers.ChatApplication.getMessagesAsync(room: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public/dist", file)
